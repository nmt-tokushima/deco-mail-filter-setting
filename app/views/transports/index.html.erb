<h1>配送先振り分け設定</h1>

<table class="table">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Nexthop</th>
      <th>Port</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @transports.each do |transport| %>
      <tr>
        <td><%= transport.domain %></td>
        <td><%= transport.nexthop %></td>
        <td><%= transport.port %></td>
        <td><%= link_to 'Edit', edit_transport_path(transport), class: 'btn' %></td>
        <td><%= link_to 'Destroy', transport, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-error' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transport', new_transport_path, class: 'btn' %>
